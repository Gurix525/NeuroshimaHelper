<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NeuroshimaDB.Views.NpcDetailPage"
    xmlns:local="clr-namespace:NeuroshimaDB.ViewModels"
    xmlns:model="clr-namespace:NeuroshimaDB.Models"
    xmlns:behaviors="clr-namespace:NeuroshimaDB.Behaviors"
    xmlns:services="clr-namespace:NeuroshimaDB.Services"
    Title="{Binding Title}">

    <StackLayout>
        <Label
            Text="{Binding Name}"
            FontSize="Large"/>
        <Label
            Text="{Binding Perk}"
            FontSize="Medium"
            FontAttributes="Bold"/>
        <Label
            Text="{Binding PerkDescription}"
            FontSize="Medium"/>
    </StackLayout>
</ContentPage>